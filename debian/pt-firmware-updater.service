[Unit]
Description=pi-top device firmware updater daemon
Documentation=https://knowledgebase.pi-top.com/knowledge
# Required to determine what type of device
After=pt-device-manager.service

[Service]
Type=simple
Restart=on-failure
Environment="PYTHONUNBUFFERED=1"
Environment="PYTHONDONTWRITEBYTECODE=1"
ExecStart=/usr/bin/pt-firmware-checker --loop-time 3 --wait-timeout 300 --max-wait-timeout 3600

[Install]
WantedBy=graphical.target
